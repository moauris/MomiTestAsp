@{
}
@model IEnumerable<QuizScenario>

<div class="container">
    <div class="row">
        <div class="col align-self-center">
            @foreach (QuizScenario scenario in Model)
            {
            <div class="card my-3 shadow">
                <div class="card-header mt-5">
                    <!--Show Scenario partial here-->
                    @Html.Raw(scenario.PageText)
                </div>
                <!--Generate questions-->
                @foreach (Quiz quiz in scenario.Quizzes)
                {
            <div class="card-body">

                <p>@quiz.Question</p>

                @foreach (RelQuizOption opt in quiz.RelQuizOptions)
                {
                    <div class="card-text">

                        <p class="pull-left">@opt.Option.Content</p>
                        <p class="pull-right">@opt.AnswerState</p>
                    </div>
                }
            </div>

                }
            </div>
            }
            </div>
    </div>
</div>